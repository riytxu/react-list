{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "no-console": "warn",
    "quotes": ["warn", "double"],
    "prefer-const": "warn",
    "indent": [
      "warn",
      2,
      { "SwitchCase": 1, "ignoredNodes": ["ConditionalExpression"] }
    ],
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}
